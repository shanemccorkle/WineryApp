<p id="notice"><%= notice %></p>

<h1>Listing Wineries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wineries.each do |winery| %>
      <tr>
        <td><%= winery.name %></td>
        <td><%= winery.location %></td>
        <td><%= winery.description %></td>
        <td><%= link_to 'Show', winery %></td>
        <td><%= link_to 'Edit', edit_winery_path(winery) %></td>
        <td><%= link_to 'Destroy', winery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

